<tr>

  <td><%= image_tag item.image_url, height: '300', width: '300', id: "#{item.id}_item" %></td>

  <td><%= item.title %></td>

  <td><%= item.description %></td>

  <td><%= item.travesty_title %></td>

  <td><%= item.price %></td>

  <td id="<%= "item_#{item.id}_qty" %>" >
    <%= form_for(:qty_update_data, url: cart_item_path(item.id), method: "patch") do |f| %>
      <%= f.label :quantity %>
      <%= f.text_field :quantity, value: item.qty %>
      <%= f.hidden_field :item_id, value: item.id %>
      <%= f.submit "Update quantity"%>
    <% end %>
  </td>

  <td id= "<%= "item_#{item.id}_line_ttl" %>" > <%= item.line_total_price %></td>

  <td><%= link_to "Remove", cart_item_path(item.id), method: :delete %></td>

</tr>
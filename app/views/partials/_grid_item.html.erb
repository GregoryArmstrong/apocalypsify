
      <div class="col s4">
        <div class="card">
          <div class="card-image">
              <%= image_tag item.image_url, id: "#{item.id}_item", class: "item-show", style: "float:right;" %>
          </div>
          <div class="card-content">
            <span class="card-title"><%= link_to item.title, item_path(item) %></span>
            <p><%= item.travesty.title %></p>
            <p><%= item.description %></p>
          </div>
          <div class="card-action">
            <% if item.active? %>
            <a class="waves-effect waves-light btn">
              <%= button_to "Add to cart", cart_items_path(item_id: item.id), id: "#{item.id}_add_button"  %>
            </a>
            <% end %>
          </div>
        </div>
      </div>

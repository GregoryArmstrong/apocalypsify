<div class="col s4">
  <div class="card">
    <div class="card-image">
        <%= image_tag item.image_url, id: "#{item.id}_item", class: "item-show", style: "float:right;" %>
    </div>
    <div class="card-content">
      <span class="card-title"><%= link_to item.title, item_path(item) %></span>
      <p><%= item.travesty.title %></p>
      <p><%= item.description %></p>
      <p><%= number_to_currency(item.price) %></p>
    </div>
    <div class="card-action">
      <% if item.active? %>
      <a class="waves-effect waves-light btn">
        <%= button_to "Add Review", new_item_review_path(item), id: "#{item.id}_add_button", method: :get  %>
      </a>
      <% end %>
    </div>
  </div>
</div>

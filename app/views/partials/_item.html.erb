<li>
  <div class="row">
    <div class="card">
      <div class="card-image">
        <%= image_tag item.image_url, height: '200', width: '300', id: "#{item.id}_item" %>
        <span class="card-title"><%= item.title %></span>
      </div>
      <div class="card-content center">
        <p><%= item.description %></p>
        <p><%= number_to_currency(item.price) %></p>
        <p>Travesty: <%= item.travesty.title %></p>
      </div>
      <div class="card-action center" id='<%= "#{item.id}_add_button" %>' >
        <% if item.active? %>
          <%= button_to "Add to cart", cart_items_path(item_id: item.id), id: "#{item.id}_add_button"  %>
        <% end %>
      </div>
    </div>
  </div>
</li>

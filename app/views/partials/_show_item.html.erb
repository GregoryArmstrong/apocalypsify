
<div class="row">
  <div class="col m3">
    <div class="card">
      <div class="card-image">
        <%= image_tag item.image_url, height: '200', width: '300', id: "#{item.id}_item" %>
      </div>
      <div class="card-content">
        <span class="card-title"><%= link_to item.title, item_path(item) %></span>
      </div>
    </div>
  </div>
     <div class="col m3">
       <div class="card">
         <div class="card-content" id="item_show_description">
           <p><%= item.description %></p>
         </div>
         <div class="card-action center" id='<%= "#{item.id}_add_button" %>' >
           <% if item.active? %>
             <%= button_to "Add to cart", cart_items_path(item_id: item.id), id: "#{item.id}_add_button"  %>
           <% end %>
         </div>
       </div>
     </div>
   </div>

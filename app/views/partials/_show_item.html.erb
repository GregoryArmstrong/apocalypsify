<div class="checkout container">

    <div class="card">
      <div class="row">
      <div class="col m4">
        <%= image_tag item.image_url, height: '200', width: '300', id: "#{item.id}_item", class: "item-show" %>
      </div>
      <div class="col m8">
        <div class="item-description">
          <span class="card-title"><%= link_to item.title, item_path(item) %></span>
          <p><%= item.description %></p>
          <% if item.active? %>
          <div style="float: right;padding-top: 2.4rem;">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            <%= button_to "Add to cart", cart_items_path(item_id: item.id), id: "#{item.id}_add_button"  %>
          </button>
        </div>
          <% end %>
        </div>
      </div>
  </div>


  </div>

</div>
